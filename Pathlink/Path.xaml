<UserControl x:Class="Pathlink.Path"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pathlink"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Caminho:" Foreground="White" FontSize="18" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="10" TextWrapping="NoWrap" AcceptsReturn="False" Height="30" FontSize="20" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="10,0,10,0" x:Name="Caminho" TextChanged="Caminho_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </Grid>
        <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <TextBlock Text="Magnetic Declination"
                x:Name="MagCalcResult"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Normal"
                Foreground="White"
                Visibility="Hidden"
                Margin="20px"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="5,0,5,0"
            VerticalAlignment="Center" Grid.ColumnSpan="2">
                <TextBlock Text="Site A"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="White"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1"
                    Text="Site Name:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBlock Grid.Row="2"
                    Text="Latitude:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBlock Grid.Row="3"
                    Text="Longitude:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBlock Grid.Row="4"
                    Text="Altitude:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBox Grid.Column="1"
                    Grid.Row="1"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    x:Name="SiteA">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1"
                    Grid.Row="2"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    x:Name="LatA"
                    TextChanged="CoordsChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1"
                    Grid.Row="3"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    x:Name="LongA"
                    TextChanged="CoordsChanged">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1"
                    Grid.Row="4"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    x:Name="AltA">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="2"
            Margin="5,0,5,0"
            VerticalAlignment="Center">
                <TextBlock Text="Site B"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="White"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1"
                    Text="Site Name:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBlock Grid.Row="2"
                    Text="Latitude:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBlock Grid.Row="3"
                    Text="Longitude:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBlock Grid.Row="4"
                    Text="Altitude:"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Margin="10"/>
                    <TextBox Grid.Column="1"
                    Grid.Row="1"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    x:Name="SiteB">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1"
                    Grid.Row="2"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    TextChanged="CoordsChanged"
                    x:Name="LatB">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1"
                    Grid.Row="3"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                        TextChanged="CoordsChanged"
                    x:Name="LongB">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBox Grid.Column="1"
                    Grid.Row="4"
                    Margin="5"
                    TextWrapping="NoWrap"
                    AcceptsReturn="False"
                    Height="25"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="3,0,3,0"
                    x:Name="AltB">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="200,0,0,0">
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="4"
   Grid.Column="0"
    Text="Distancia:"
    VerticalAlignment="Center"
    HorizontalAlignment="Right"
    FontSize="20"
    Foreground="White"
    Margin="10"/>
                <TextBox Margin="5" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="NoWrap" AcceptsReturn="False" Height="25" Width="125" FontSize="16" FontWeight="SemiBold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="3,0,3,0" x:Name="DistanciaTotal" IsReadOnly="True" Text="-">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="4"
               Grid.Column="0"
                Text="Frequência:"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                FontSize="20"
                Foreground="White"
                Margin="10"/>
                <TextBox Margin="5"
             Grid.Column="1"
             HorizontalAlignment="Left"
            TextWrapping="NoWrap"
            AcceptsReturn="False"
            Height="25"
            Width="125"
            FontSize="16"
            FontWeight="SemiBold"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Padding="3,0,3,0"
            x:Name="Frequency">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="3"
        HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock  Grid.Column="0"
                Text="Declinação Magnética:"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                FontSize="20"
                Foreground="White"
                Margin="5"/>
            <TextBlock  Grid.Column="1"
                Text="?"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                FontSize="20"
                Foreground="Gold"
                Margin="5"
                x:Name="Declination"/>

        </Grid>
        <Button Content="Generate"
                Grid.Row="4"
                Height="50"
                Width="300"
                Foreground="White"
                Background="#151025"
                FontSize="18"
                BorderThickness="0"
                x:Name="Generate"
                Click="Generate_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0"
                    CornerRadius="25"
                    RenderTransformOrigin="0.5,0.5">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.05" To="1.1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" Storyboard.TargetName="RootBorder" />
                                        <DoubleAnimation Duration="0:0:0.05" To="1.1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" Storyboard.TargetName="RootBorder" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.05" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" Storyboard.TargetName="RootBorder" />
                                        <DoubleAnimation Duration="0:0:0.05" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" Storyboard.TargetName="RootBorder" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1" />
                        </Border.RenderTransform>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Text="Preencha todas as informações corretamente!"
            Foreground="OrangeRed"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden"
            x:Name="Erro_Preencher"/>
        <TextBlock Grid.Row="4"
            Text="COMPLETED"
            FontSize="20"
            Foreground="Green"
            FontWeight="SemiBold"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Visibility="Hidden"
            x:Name="Completed"
            Margin="0,0,0,15"/>
    </Grid>
</UserControl>
